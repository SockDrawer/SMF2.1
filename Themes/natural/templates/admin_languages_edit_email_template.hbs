	{{! Editing an email }}
	<div id="admincenter">
		<div class="cat_bar">
			<h3 class="catbg">
				{{{context.page_title}}}
			</h3>
		</div>
		<div class="windowbg">
			<form action="{{{context.email_template_content.editlink}}}" method="post" accept-charset="UTF-8">
				<div class="information">{{{context.email_template_content.desc}}}</div>
				<dl class="settings">
					<dt>{{{txt.email_subject}}}</dt>
					<dd><input type="text" name="subject" value="{{{context.email_template_content.subject}}}" required></dd>
					<dt>{{{txt.email_body}}}</dt>
					<dd><textarea name="body" required>{{{context.email_template_content.body}}}</textarea></dd>
				</dl>
				<input type="submit" name="save" value="{{{txt.save}}}">
				{{session_form}}
			</form>
		</div>
	</div>