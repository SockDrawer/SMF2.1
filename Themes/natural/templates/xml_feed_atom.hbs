<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{{context.feed.language}}}">
	<title>{{cdata context.feed.title}}</title>
	<subtitle>{{#if context.feed.subtitle}}{{cdata context.feed.subtitle}}{{else}}{{cdata context.feed.description}}{{/if}}</subtitle>

	<link rel="alternate" type="text/html" href="{{{context.feed.source}}}" />
	<link rel="self" type="application/atom+xml" href="{{{context.feed.url}}}" />

	<updated>{{{context.feed.generated_time.atom}}}</updated>
	<id>{{{cdata context.feed.source}}}</id>
	<generator uri="{{{context.feed.generator.url}}}" version="{{{context.feed.generator.version}}}">{{{context.feed.generator.name}}}</generator>
	{{#if context.feed.icon}}<icon>{{cdata context.feed.icon}}</icon>{{/if}}

	{{#if context.feed.author}}
	<author>
		<name>{{cdata context.feed.author}}</name>
	</author>
	{{/if}}

	{{#if context.feed.rights}}<rights>{{cdata context.feed.rights}}</rights>{{/if}}

	{{#each context.feed.items}}
	<entry>
		<title>{{cdata this.title}}</title>
		<link rel="alternate" type="text/html" href="{{{this.content_link}}}" />
		<summary type="html">{{cdata this.description}}</summary>
		{{#each this.categories}}<category term="{{cdata .}}" />{{/each}}
		<author>
			<name>{{cdata this.author.name}}</name>
			{{#if this.author.email}}<email>{{this.author.email}}</email>{{/if}}
			{{#if this.author.link}}<uri>{{this.author.link}}</uri>{{/if}}
		</author>
		<published>{{{this.published_time.atom}}}</published>
		<updated>{{{this.updated_time.atom}}}</updated>
		<id>{{{this.id}}}</id>
	</entry>
	{{/each}}
</feed>