	<form action="{{scripturl}}?action=pm;sa=manage_rules" method="post" accept-charset="UTF-8" name="manRules" id="manrules">
		<div class="cat_bar">
			<h3 class="catbg">{{txt.pm_manage_rules}}</h3>
		</div>
		<div class="information">
			{{txt.pm_manage_rules_desc}}
		</div>
		<table class="table_grid">
			<thead>
				<tr class="title_bar">
					<th class="lefttext">
						{{txt.pm_rule_title}}
					</th>
					<th class="centertext table_icon">
						{{#if context.rules}}
						<input type="checkbox" onclick="invertAll(this, this.form);">
						{{/if}}
					</th>
				</tr>
			</thead>
			<tbody>

{{#unless context.rules}}
				<tr class="windowbg">
					<td colspan="2">
						{{txt.pm_rules_none}}
					</td>
				</tr>
{{/unless}}

{{#each context.rules}}
				<tr class="windowbg">
					<td>
						<a href="{{scripturl}}?action=pm;sa=manage_rules;add;rid={{id}}">{{name}}</a>
					</td>
					<td class="table_icon">
						<input type="checkbox" name="delrule[{{id}}]">
					</td>
				</tr>
{{/each}}

			</tbody>
		</table>
		<div class="buttonlist righttext">
			<a class="button" href="{{scripturl}}?action=pm;sa=manage_rules;add;rid=0">{{txt.pm_add_rule}}</a>

{{#if context.rules}}
			<a class="button" href="{{scripturl}}?action=pm;sa=manage_rules;apply;{{session_url}}" onclick="return confirm('{{txt.pm_js_apply_rules_confirm}}');">{{txt.pm_apply_rules}}</a>
			<input type="submit" name="delselected" value="{{txt.pm_delete_selected_rule}}" data-confirm="{{txt.pm_js_delete_rule_confirm}}" class="you_sure">
{{/if}}

			{{session_form}}
		</div>
	</form>