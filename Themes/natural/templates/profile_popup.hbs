		{{! Display the user profile popup
		This is designed to be included into the HTML directly via $().load()
		}}
		<div class="profile_user">
			<div class="profile_user_avatar"><a href="{{scripturl}}?action=profile;u={{context.user.id}}">{{{context.member.avatar.image}}}</a></div>
			<div class="profile_username"><a href="{{scripturl}}?action=profile;u={{context.user.id}}">{{{context.user.name}}}</a></div>
			<div class="profile_group">{{{context.member.group}}}</div>
		</div>
		<div class="profile_user_links">
			<ol>
				{{#each context.profile_items}}
				<li>
					{{#if icon}}<span class="main_icons {{icon}}"></span>{{/if}} <a href="{{{url}}}">{{{title}}}</a>
				</li>
				{{/each}}
			</ol>
		</div>