{{#if use_graphic_library}}
		<img src="{{image_href}}" alt="{{txt.visual_verification_description}}" id="verification_image_{{verify_id}}">
{{else}}
		<img src="{{image_href}};letter=1" alt="{{{txt.visual_verification_description}}}" id="verification_image_{{verify_id}}_1">
		<img src="{{image_href}};letter=2" alt="{{{txt.visual_verification_description}}}" id="verification_image_{{verify_id}}_2">
		<img src="{{image_href}};letter=3" alt="{{{txt.visual_verification_description}}}" id="verification_image_{{verify_id}}_3">
		<img src="{{image_href}};letter=4" alt="{{{txt.visual_verification_description}}}" id="verification_image_{{verify_id}}_4">
		<img src="{{image_href}};letter=5" alt="{{{txt.visual_verification_description}}}" id="verification_image_{{verify_id}}_5">
		<img src="{{image_href}};letter=6" alt="{{{txt.visual_verification_description}}}" id="verification_image_{{verify_id}}_6">
{{/if}}

		<div class="smalltext" style="margin: 4px 0 8px 0;">
			<a href="{{image_href}};sound" id="visual_verification_{{verify_id}}_sound" rel="nofollow">{{{txt.visual_verification_sound}}}</a> / <a href="#visual_verification_{{verify_id}}_refresh" id="visual_verification_{{verify_id}}_refresh">{{{txt.visual_verification_request_new}}}</a><br><br>
			{{{txt.visual_verification_description}}}:<br>
			<input type="text" name="{{verify_id}}_vv[code]" value="{{{text_value}}}" size="30" required>
		</div>