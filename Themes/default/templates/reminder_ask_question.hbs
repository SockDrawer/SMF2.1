	{{! Asking a user to answer their secret question }}
	<br>
	<form action="{{scripturl}}?action=reminder;sa=secret2" method="post" accept-charset="UTF-8" name="creator" id="creator">
		<div class="tborder login">
			<div class="cat_bar">
				<h3 class="catbg">{{{txt.authentication_reminder}}}</h3>
			</div>
			<div class="roundframe">
				<p class="smalltext">{{{txt.enter_new_password}}}</p>
				<dl>
					<dt>{{{txt.secret_question}}}:</dt>
					<dd>{{{context.secret_question}}}</dd>
					<dt>{{{txt.secret_answer}}}:</dt>
					<dd><input type="text" name="secret_answer" size="22"></dd>
					<dt>{{{txt.choose_pass}}}: </dt>
					<dd>
						<input type="password" name="passwrd1" id="sbb_autov_pwmain" size="22">
						<span id="sbb_autov_pwmain_div" style="display: none;">
							<span id="sbb_autov_pwmain_img" class="generic_icons invalid"></span>
						</span>
					</dd>
					<dt>{{{txt.verify_pass}}}: </dt>
					<dd>
						<input type="password" name="passwrd2" id="sbb_autov_pwverify" size="22">
						<span id="sbb_autov_pwverify_div" style="display: none;">
							<span id="sbb_autov_pwverify_img" class="generic_icons valid"></span>
						</span>
					</dd>
				</dl>
				<div class="auto_flow">
					<input type="submit" value="{{{txt.save}}}" class="button_submit">
					<input type="hidden" name="uid" value="{{{context.remind_user}}}">
					{{session_form}}
					{{token_form 'remind-sai'}}
				</div>
			</div>
		</div>
	</form>
<script>
	var regTextStrings = {
		"password_short": {{{json txt.registration_password_short}}},
		"password_reserved": {{{json txt.registration_password_reserved}}},
		"password_numbercase": {{{json txt.registration_password_numbercase}}},
		"password_no_match": {{{json txt.registration_password_no_match}}},
		"password_valid": {{{json txt.registration_password_valid}}}
	};
	var verificationHandle = new sbbRegister("creator", {{#if modSettings.password_strength}}{{modSettings.password_strength}}{{else}}0{{/if}}, regTextStrings);
</script>