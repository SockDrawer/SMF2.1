	{{! Edit a specific language entry. }}
	<div id="admincenter">
		<form action="{{context.current_entry.link}}" method="post" accept-charset="UTF-8">
			<div class="cat_bar">
				<h3 class="catbg">
					{{{txt.edit_languages}}}
				</h3>
			</div>
			<div id="editlang_desc" class="information">
				{{{txt.edit_language_entries_primary}}}
			</div>

			<div class="windowbg">
				<dl class="settings">
					<dt>
						{{context.current_entry.display}}
					</dt>
					<dd>
{{#if (is_array context.current_entry.master)}}
						{{{txt.language_master_values}}}:
						<dl>
	{{#each context.current_entry.master}}
							<dt>{{@key}}</dt>
							<dd>{{.}}</dd>
	{{/each}}
						</dl>
						<br>{{{txt.language_new_values}}}:<br>
						<dl>
	{{#each context.current_entry.current}}
							<dt><input name="entry_key[]" type="text" value="{{@key}}"></dt>
							<dd><textarea name="entry_value[]">{{.}}</textarea></dd>
	{{/each}}
						</dl>
{{else}}
						{{{txt.language_master_value}}}: <i>{{context.current_entry.master}}</i><br>
						{{{txt.language_new_value}}}:<br>
						<textarea name="entry">{{context.current_entry.current}}</textarea>
{{/if}}
					</dd>
				</dl>
				<input type="submit" name="save_entry" class="button_submit" value="{{{txt.save}}}">
			</div>

			{{session_form}}
			{{token_form 'admin-mlang'}}
		</form>
	</div>