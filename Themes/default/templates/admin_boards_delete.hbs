	{{! When deleting a board... }}
	<div id="manage_boards" class="roundframe">
		<form action="{{scripturl}}?action=admin;area=manageboards;sa=board2" method="post" accept-charset="UTF-8">
			<input type="hidden" name="boardid" value="{{context.board.id}}">

			<div class="cat_bar">
				<h3 class="catbg">{{{txt.mboards_delete_board}}}</h3>
			</div>
			<div class="windowbg">
				<p>{{{txt.mboards_delete_board_contains}}}</p>
				<ul>
					{{#each context.children}}
					<li>{{{node.name}}}</li>
					{{/each}}
				</ul>
			</div>
			<div class="cat_bar">
				<h3 class="catbg">{{{txt.mboards_delete_what_do}}}</h3>
			</div>
			<div class="windowbg">
				<p>
					<label for="delete_action0"><input type="radio" id="delete_action0" name="delete_action" value="0" checked>{{{txt.mboards_delete_board_option1}}}</label><br>
					<label for="delete_action1"><input type="radio" id="delete_action1" name="delete_action" value="1"{{#unless context.can_move_children}} disabled{{/unless}}>{{{txt.mboards_delete_board_option2}}}</label>:
					<select name="board_to"{{#unless context.can_move_children}} disabled{{/unless}}>
						{{#each context.board_order}}
						{{#if (and (neq id ../context.board.id) (not is_child))}}
						<option value="{{id}}">{{{name}}}</option>
						{{/if}}
						{{/each}}
					</select>
				</p>
				<input type="submit" name="delete" value="{{{txt.mboards_delete_confirm}}}" class="button_submit">
				<input type="submit" name="cancel" value="{{{txt.mboards_delete_cancel}}}" class="button_submit">
				<input type="hidden" name="confirmation" value="1">
				{{session_form}}
				{{token_form context.token_check}}
			</div>
		</form>
	</div>