<div id="personal_messages">
	{{#if context.limit_bar}}
	<div class="cat_bar">
			<h3 class="catbg">
				<span class="floatleft">{{txt.pm_capacity}}:</span>
				<span class="floatleft capacity_bar">
					<span class="{{#if (gt context.limit_bar.percent 85)}}full{{else}}{{#if (gt context.limit_bar.percent 40)}}filled{{else}}empty{{/if}}{{/if}}" style="width: {{div context.limit_bar.percent 10}}em;"></span>
				</span>
				<span class="floatright{{#if (gt context.limit_bar.percent 90)}} alert{{/if}}">{{context.limit_bar.text}}</span>
			</h3>
		</div>
	{{/if}}
	{{#if context.pm_sent}}
		<div class="infobox">
			{{txt.pm_sent}}
		</div>
	{{/if}}